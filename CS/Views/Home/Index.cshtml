@{
    ViewBag.Title = "Sign in";
}

@model AspNetCore31Dashboard.LoginData

@using DevExpress.DashboardWeb

<style type="text/css">
    .roleTable td, .roleTable th {
        border: 1px solid black;
        padding: 5px;
    }
</style>

<h1>DashboardDifferentUserData Example</h1>
<p>Select a user or leave the combo box empty to view the dashboards unauthorized:</p>

@using (Html.BeginForm()) {
    @(Html.DevExtreme().SelectBoxFor(m => m.UserName)
        .Placeholder("Select User")
        .ShowClearButton(true)
        .Items(items => {
            items.Add().Text("Admin");
            items.Add().Text("User");
        })
        .ValueExpr("text")
        .DisplayExpr("text")
    )
    <br />
    @(Html.DevExtreme().Button()
        .ID("btnSubmit")
        .Text("Sign in")
        .UseSubmitBehavior(true)
    )
}

<hr />
